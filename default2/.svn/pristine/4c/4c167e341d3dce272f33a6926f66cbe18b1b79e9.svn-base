.topopwrap{
  width: 100%;
  height: 130rpx;
  background-color: #fafafa;
     position: fixed;
  left: 0;
  top: 0;
display: flex;
justify-content: center;
align-items: center;
z-index: 9999;
}
.topoptions{
width:70%;
height: 70rpx;
border: 2rpx solid #ff6398;
display: flex;
font-size: 30rpx;
border-radius: 10rpx;
background-color: #fff;

}
.options{
width:50%;
height: 100%;
display: flex;
justify-content: center;
align-items: center; 
color: #ff6398;
}
.option{
  width:50%;
height: 100%;
display: flex;
justify-content: center;
align-items: center; 
border-right: 2rpx solid #ff6398;
color: #ff6398;
}
.optionselected{
color: #fff;
background-color: #ff6398;
}
.thend{
  font-size: 24rpx;
