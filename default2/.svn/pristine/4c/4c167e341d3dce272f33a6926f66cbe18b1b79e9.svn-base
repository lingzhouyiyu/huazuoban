}
/* 瀑布样式 */
.myscroll{
  width: 100%;
}
.scrollwrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.falls {
  width: 94%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 130rpx;
}

.falsitem {
  width: 48%;
  height: auto;
}

.items {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.items image {
  width: 100%;
}

.itemname {
  width: 90%;
