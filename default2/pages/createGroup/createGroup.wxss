.topwrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-top: 2rpx solid #f2f2f2;
  position: fixed;
  top: 0;
  left: 0;
}

.top {
  width: 70%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.message {
  width: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: red; */
  flex-direction: column;
}

.notice {
  width: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: yellow; */
  flex-direction: column;
}

.txtcolor {
  color: #ff6398;
}
.bottomline {
  width: 110rpx;
  height: 5rpx;
  background-color: #ff6398;
}

.bottomlines {
  width: 110rpx;
  height: 5rpx;
  background-color: #fff;
}
.kaiqibtn{
  width: 94%;
  height: 90rpx;
  color: #fff;
  background-color: #ff4081;
  /* margin-top: 140rpx; */
   margin-top: 50rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tztitle{
  width: 94%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  color: rgb(50, 50, 50);
  font-size: 35rpx;
  border-bottom: 2rpx solid #8a8a8a;
  height: 60rpx;
}
.itemwrap{
  width: 88%;
  height: 500rpx;
  /* background-color: red; */
  /* margin-top: 20rpx; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.item{
  width: 100%;
  height: 100rpx;
  /* background-color: yellow; */
  /* margin-bottom: 30rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f2f2f2;
}
.itemleft{
  width: 80%;
  /* background-color: green; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.headerimg{
width: 100rpx;
height: 100rpx;
border-radius: 50%;
margin-right: 15rpx;
}
.headerimg image{
width: 100rpx;
height: 100rpx;
border-radius: 50%;
/* margin-right: 15rpx; */
}
.content{
  height: 80rpx;
  /* background-color: gainsboro; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.contenttop{
  font-size: 28rpx;
  font-weight: bold;
}
.contentbottom{
  font-size: 26rpx;
}
.marleft{
  margin-left: 20rpx;
}
.itemright{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.gobtn{
  background-color: #ff4081;
  color: #fff;
  width: 100%;
  border-radius: 10rpx;
  padding: 7rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
